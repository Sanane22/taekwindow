<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="Taekwindow custom build rules"
	Version="8,00"
	>
	<Rules>
		<CustomBuildRule
			Name="generateFromXML"
			DisplayName="Generate file from XML"
			CommandLine="&quot;$(SolutionDir)bin\msxsl.exe&quot; &quot;[InputXML]&quot; &quot;$(InputPath)&quot; -o &quot;[OutputFile]&quot;"
			Outputs="[OutputFile]"
			AdditionalDependencies="[InputFile]"
			FileExtensions="*.xslt"
			ExecutionDescription="Generating [OutputFile] from $(InputFileName) and [InputXML]..."
			>
			<Properties>
				<StringProperty
					Name="InputXML"
					DisplayName="XML input"
					Description="The XML file to use as input to the XSLT"
					Switch="[value]"
					Delimited="true"
				/>
				<StringProperty
					Name="OutputFile"
					DisplayName="Output file"
					Description="The file to write the result of XSLT processing to"
					Switch="[value]"
					Delimited="true"
				/>
			</Properties>
		</CustomBuildRule>
		<CustomBuildRule
			Name="C Preprocessor"
			DisplayName="C Preprocessor"
			CommandLine="cl.exe /EP &quot;$(InputPath)&quot; &gt; &quot;[OutputDir]\$(InputName)&quot;"
			Outputs="[OutputDir]\$(InputName)"
			FileExtensions="*.pp"
			ExecutionDescription="Preprocessing $(InputFileName)..."
			>
			<Properties>
				<StringProperty
					Name="OutputDir"
					DisplayName="Output directory"
					Description="Sets the directory to which the output file will be written."
					Switch="[value]"
					DefaultValue="$(IntDir)"
					Delimited="true"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
